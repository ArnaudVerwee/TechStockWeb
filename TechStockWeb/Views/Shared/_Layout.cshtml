<!DOCTYPE html>

@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using System.Globalization
@using TechStockWeb.Resources

@inject IStringLocalizer<SharedResource> _localizer

@inject IStringLocalizer<SharedResource> StringLocalizer


<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechStockWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechStockWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TechStockWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin") || User.IsInRole("Support"))
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">
                                <i class="bi bi-box"></i> @Localizer["Products"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Suppliers" asp-action="Index">@Localizer["Suppliers"]</a>
                        </li>
                        }
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="MaterialManagements" asp-action="MyAssignedProducts">
                                    <i class="bi bi-clipboard-check"></i> @Localizer["My Assigned Products"]
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">@Localizer["Users"]</a>
                            </li>
                        }

                    </ul>

                    <partial name="_LoginPartial" />
                    <partial name="_LanguagePartial" />

                </div>
            </div>
        </nav>
        <p>Test accès ressources : @StringLocalizer["Home"]</p>
        <p>Culture active : @CultureInfo.CurrentUICulture.Name</p>
        <p>Langue actuelle : @CultureInfo.CurrentCulture.Name</p>
        <p>Test traduction Home : @Localizer["Home"]</p>
        <p>Test traduction Privacy : @Localizer["Privacy"]</p>
        <p>Test alternative Privacy : @_localizer["Privacy"]</p>

        <div class="container">
    </header>
    <p>Langue actuelle : @CultureInfo.CurrentCulture.Name</p>
    <p>Test traduction : @_localizer["TestKey"]</p>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - TechStockWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script pour éviter de recharger la page si la langue ne change pas -->
    <script>
        document.getElementById('languageSelect').addEventListener('change', function () {
            let selectedLang = this.value;
            let currentLang = "@CultureInfo.CurrentCulture.Name";

            if (selectedLang !== currentLang) {
                document.getElementById('languageForm').submit();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
