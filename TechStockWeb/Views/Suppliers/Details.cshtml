@model TechStockWeb.Models.Supplier
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Details"];
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["Supplier"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary mt-2" asp-route-id="@Model?.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index" class="btn btn-secondary mt-3">@Localizer["Back to List"]</a>
</div>
