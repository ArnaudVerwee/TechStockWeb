@{
    ViewData["Title"] = "Dashboard";
}

@if (User.Identity!.IsAuthenticated)
{
    <h1 class="mt-4">📊 Tableau de bord</h1>

    <!-- Affichage du total des produits -->
    <h2 id="totalProducts" class="mt-3 text-primary"></h2>

    <!-- Pie Chart pour Assigné / Non Assigné -->
    <div style="width:300px">
        <canvas id="productChart" class="chart-size"></canvas>
    </div>

    <!-- Graphique Performance Utilisateur -->
    <h3 class="mt-4">📊 Performance des Utilisateurs</h3>
    <div style="width:300px">
        <canvas id="userPerformanceChart" class="chart-size"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            // Charger les statistiques des produits
            $.ajax({
                url: '/Home/GetProductStats',
                type: 'GET',
                success: function (data) {
                    $("#totalProducts").text(`📦 Total Produits: ${data.totalProducts}`);

                    let ctx = document.getElementById('productChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'pie',
                        data: {
                            labels: ['Assignés', 'Non Assignés'],
                            datasets: [{
                                data: [data.assignedProducts, data.unassignedProducts],
                                backgroundColor: ['#4CAF50', '#F44336']
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false
                        }
                    });
                },
                error: function () {
                    alert("Erreur lors du chargement des statistiques des produits.");
                }
            });

            // Charger les performances des utilisateurs
            $.ajax({
                url: '/Home/UserPerformanceStats',
                type: 'GET',
                success: function (data) {
                    let labels = data.map(user => user.userName);
                    let values = data.map(user => user.productCount);

                    let ctx = document.getElementById('userPerformanceChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Produits reçus',
                                data: values,
                                backgroundColor: 'rgba(54, 162, 235, 0.5)',
                                borderColor: 'rgba(54, 162, 235, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                },
                error: function () {
                    alert("Erreur lors du chargement des performances des utilisateurs.");
                }
            });
        });
    </script>
}

